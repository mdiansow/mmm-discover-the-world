<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fr.istic.m2gla.mmm">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme2"
        android:name=".client.Common">
        <activity
            android:name="fr.istic.m2gla.mmm.MainActivity2"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.istic.m2gla.mmm.chat_activities.MainActivity"
            android:label="@string/app_name"></activity>

        <activity
            android:name="fr.istic.m2gla.mmm.chat_activities.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity
            android:name="fr.istic.m2gla.mmm.chat_activities.ChatActivity"
            android:logo="@drawable/ic_contact_picture"></activity>

        <provider
            android:name="fr.istic.m2gla.mmm.chat_activities.DataProvider"
            android:authorities="fr.istic.m2gla.mmm.provider"
            android:exported="false" />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <permission
        android:name="fr.istic.m2gla.mmm.client.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="fr.istic.m2gla.mmm.client.permission.C2D_MESSAGE" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />


    <receiver
        android:name="fr.istic.m2gla.mmm.client.GcmBroadcastReceiver"
        android:permission="com.google.android.c2dm.permission.SEND">
        <intent-filter>
            <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            <category android:name="fr.istic.m2gla.mmm.client" />
        </intent-filter>
    </receiver>
</manifest>
